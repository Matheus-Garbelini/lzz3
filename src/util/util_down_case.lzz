// convert string to lower case
std::string downCase(std::string const &str)
{
   std::string res;
   res.reserve(str.size());
   for (std::string::const_iterator i = str.begin(), endi = str.end(); i != endi; ++i)
   {
      char ch = tolower(*i);
      res += ch;
   }
   return res;
}

