namespace cpp
{
   // argument to function macro, one or more tokens
   class MacroArg
   {
   public:
      MacroArg(TokenPtrVector const &tokens)
         : tokens_(tokens)
      {}
      ~MacroArg()
      {}
      // get arg tokens
      inline TokenPtrVector const &getTokens() const
      {
         return tokens_;
      }
   private:
      // token set
      TokenPtrVector tokens_;
   }
}

#hdr
#include <cpp_token_ptr_vector.h>
#end
