-----------------------------------------------------------------------------
-- function params to string
-----------------------------------------------------------------------------
local paramsToString      = require 'lzz/param/params_to_string'
-----------------------------------------------------------------------------

local function funcParamsToString (params, decl)
   local str = paramsToString (params, decl)
   if params.has_ellipse then
      if #str > 0 then
         str = str .. ', '
      end
      str = str .. '...'
   end
   return '(' .. str .. ')'
end

return funcParamsToString
